{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "plugins": [{ "transform": "./ts-transform/accessorChainTransform.ts" }],
    "baseUrl": ".",
    "paths": {
      "segedin": ["lib/index"],
      "segedin/*": ["lib/*"]
    },
    "strict": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": ["node_modules", "ts-transform/**/*"]
}
